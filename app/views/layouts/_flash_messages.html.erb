<% unless flash[:notice].blank? %>
  <div class="alert alert-dismissible alert-success alert-menu-fix">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= flash[:notice] %>
  </div>
<% end %>

<% unless flash[:alert].blank? %>
  <div class="alert alert-dismissible alert-warning alert-menu-fix">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= flash[:alert] %>
  </div>
<% end %>

<% unless flash[:danger].blank? %>
  <div class="alert alert-dismissible alert-danger alert-menu-fix">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= flash[:danger] %>
  </div>
<% end %>